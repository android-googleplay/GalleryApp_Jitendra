<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/qurekaAds"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.5"
                            android:scaleType="centerCrop"
                            android:src="@drawable/qureka_inter1" />

                        <ImageView
                            android:id="@+id/qurekaAds1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:src="@drawable/qureka_inter1" />
                    </RelativeLayout>


                    <androidx.cardview.widget.CardView
                        android:layout_width="18dp"
                        android:layout_height="13.5dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        app:cardBackgroundColor="@color/colorMain">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="AD"
                            android:textColor="@android:color/white"
                            android:textSize="9dp" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtFoldername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:ellipsize="end"
                android:fontFamily="@font/font_regular"
                android:gravity="center|left"
                android:text="Play &amp; Win Coins"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txtFolderCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:singleLine="true"
                android:maxLines="1"
                android:fontFamily="@font/font_regular"
                android:text="Win 5,00,000 Coins &amp; More"
                android:gravity="center|left"
                android:textColor="@color/textLight"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>
</LinearLayout>